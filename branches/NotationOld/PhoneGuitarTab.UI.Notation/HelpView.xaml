        </StackPanel>


        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">-->
        <c4f:AboutPrompt x:Name="helpView" Height="Auto" VersionNumber="{Binding Version}" Opacity="0.7">
            <c4f:AboutPrompt.Body>
                <StackPanel>
                    <c4f:AboutPersonItem 
                        AuthorName="Guitar tab viewer" 
                        Role="desc" />
                    <c4f:AboutPersonItem 
                        AuthorName="Ilya Builuk" 
                        EmailAddress="ilya.builuk@gmail.com"
                          Role="author" />
                    <c4f:AboutPersonItem 
                        AuthorName="Hellga Eiskalt" 
                        Role="assistant" />
                        <TextBlock Text="To search tabs, type group_name[,song_name]. Fill free to contact with authors" Margin="12"
                              TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Style="{StaticResource PhoneTextNormalStyle}"/>
                </StackPanel>
            </c4f:AboutPrompt.Body>
        </c4f:AboutPrompt>
            <!--</Grid>-->
    </Grid>

