        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="PHONE GUITAR TAB" Style="{StaticResource PhoneTextNormalStyle}"/>
