<UserControl x:Class="PhoneGuitarTab.UI.Controls.RatingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PhoneGuitarTab.UI.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="15"
             d:DesignWidth="85"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <StackPanel x:Name="pnlStarContainer" Orientation="Horizontal">
            <local:RatingStar Width="18"
                              State="Empty"
                              Value="1" />
            <local:RatingStar Width="18"
                              State="Empty"
                              Value="2" />
            <local:RatingStar Width="18"
                              State="Empty"
                              Value="3" />
            <local:RatingStar Width="18"
                              State="Empty"
                              Value="4" />
            <local:RatingStar Width="18"
                              State="Empty"
                              Value="5" />
        </StackPanel>
    </Grid>
</UserControl>